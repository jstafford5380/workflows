{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Persistence": {
    "Provider": "InMemory"
  },
  "Activities": {
    "ScriptsBasePath": "Scripts",
    "BundleStoragePath": "App_Data/Bundles",
    "DefaultTimeoutSeconds": 120,
    "ScriptMap": {
      "script.create-project": "Scripts/create-project.sh",
      "script.create-service-accounts": "Scripts/create-service-accounts.sh",
      "script.finalize": "Scripts/finalize.sh"
    }
  },
  "Bundles": {
    "StorageRoot": "App_Data/Bundles",
    "PreviewRoot": "App_Data/BundlePreviews",
    "MaxUploadBytes": 52428800,
    "PreviewTtlMinutes": 30
  },
  "ConnectionStrings": {
    "WorkflowDb": "Host=localhost;Port=5432;Database=workflow_engine;Username=postgres;Password=postgres"
  },
  "AllowedHosts": "*"
}
