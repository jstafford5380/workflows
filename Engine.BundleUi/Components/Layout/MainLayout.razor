@inherits LayoutComponentBase

<div class="page">
    <aside class="sidebar">
        <NavMenu />
    </aside>

    <main class="workspace-main">
        <header class="top-row">
            <div class="top-title">Operations Console</div>
            <a href="https://learn.microsoft.com/aspnet/core/blazor/" target="_blank" rel="noopener noreferrer">Blazor Server</a>
        </header>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">x</span>
</div>
